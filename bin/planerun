#!/bin/bash

if [ -z "$LDEV" ]; then
	export LDEV="plane|[flip|strip:A,strip:B]"
fi

THISDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [ $THISDIR == "/boot" ]; then
  DIR="/home/pi/lite/build/bin"
else
    if [ -e /boot/planerun ]; then
	echo "Sourcing /boot/planerun"
	source /boot/planerun
	exit 1
    fi
    DIR=`dirname $THISDIR`
    DIR="$DIR/build/bin"
fi

echo "LDEV=$LDEV"
echo "DIR=$DIR"

set -x

while true; do
$DIR/Ltool --time 10 --rate 3 bounce white
$DIR/Ltool --time 15 --filter sparkle clear

$DIR/Ltool --time 5 --fade 1 plane
$DIR/Ltool --time 7 --fade 1 --filter sparkle plane

$DIR/Ltool --time 10 rotwash --filter sparkle red red

$DIR/Lflash --time 5 --rate 1 
$DIR/Lflash --time 10 --rate 2 
$DIR/Lflash --time 5 --rate 2 --density .1 purple
$DIR/Lflash --time 10 --rate 2 --density .1 --filter sparkle yellow

$DIR/Ltool --time 16 rotwash red red
$DIR/Ltool --time 16 --rate -1 rotwash blue blue

done
